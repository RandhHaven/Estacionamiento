@model List<Estacionamiento.Models.Auto>

@{
    ViewData["Title"] = "Detalle De Estacionamiento";
}

@using (Html.BeginForm("ViewAutos", "Home", FormMethod.Get))
{
    <div>
        <h1> Sistema Meteorologico </h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width:100px;">Patente</th>
                <th style="width:100px;">Marca</th>
                <th style="width:100px;">Modelo</th>
                <th style="width:200px;">Empleado</th>
                <th style="width:200px; align-content:center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sist in Model)
            {
                <tr>
                    <td>@sist.Patente</td>
                    <td>@sist.Marca</td>
                    <td>@sist.Modelo</td>
                    <td>@sist.Empleado</td>
                    <td>
                        <a class="btm btn-primary" href="~/Home/ViewEditarAuto/@sist.IdAuto" title="Editar">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                        <a class="btn btn-danger" href="~/Home/ViewEliminarAuto/@sist.IdAuto" title="Eliminar">
                            <i class="glyphicon glyphicon-minus"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <input class="btn btn-success d-block col-lg-3 form-control"; type="submit" name="btnSubmit" value="Agregar Auto" />
    </div>
}

